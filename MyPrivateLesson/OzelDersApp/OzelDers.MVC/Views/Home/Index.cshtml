<script>

    const contantdiv1 = document.querySelectorAll('.animation1')
    window.addEventListener('scroll', checkBoxes5)
    checkBoxes5()

    function checkBoxes5() {
        const triggerBottom = window.innerHeight / 5 * 4
        contantdiv1.forEach(animation5 => {
            const animationTop = animation5.getBoundingClientRect().top
            if (animationTop < triggerBottom) {
                animation5.classList.add('show')
            } else {
                animation5.classList.remove('show')
            }
        })
    }
</script>