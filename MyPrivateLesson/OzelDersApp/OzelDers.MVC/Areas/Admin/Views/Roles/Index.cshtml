@model List<RoleViewModel>
@{
    List<RoleViewModel> branches = Model;
}


<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3 d-flex justify-content-between px-2">
                        <div>
                            <h6 class="text-white text-capitalize ps-3">ROLLER TABLOSU</h6>
                        </div>
                        <div>
                            <a asp-area="Admin"
                               asp-controller="Roles"
                               asp-action="Create" type="button" class="btn btn-outline-white">Rol Ekle</a>
                        </div>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Roller</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Rol Açıklaması</th>
                                    <th class="text-secondary opacity-7"></th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var branch in branches)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <h6 class="mb-0 text-sm">@branch.Name </h6>
                                            </div>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <span class="badge badge-sm bg-gradient-success">@branch.Description</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <a asp-area="Admin"
                                               asp-controller="Roles"
                                               asp-action="Edit"
                                               asp-route-id=@branch.Id class="btn btn-outline-warning " data-toggle="tooltip" data-original-title="Edit user">
                                                Düzenle
                                            </a>
                                        </td>
                                        <td class="align-middle d-flex ">
                                            <a asp-area="Admin"
                                               asp-controller="Roles"
                                               asp-action="Delete"
                                               asp-route-id=@branch.Id class="btn btn-outline-danger " data-toggle="tooltip" data-original-title="Edit user">
                                                Sil
                                            </a>

                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
